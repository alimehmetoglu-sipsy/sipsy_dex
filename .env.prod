# Production Environment Configuration
# Copy this file to .env and update values for production deployment

# Application Version
APP_VERSION=3.3.0

# Database Configuration
POSTGRES_DB=dexagents
POSTGRES_USER=dexagents
POSTGRES_PASSWORD=secure_production_password_change_me
POSTGRES_PORT=5432
DATABASE_URL=postgresql://dexagents:secure_production_password_change_me@postgres:5432/dexagents
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=production-secret-key-change-this-to-a-very-long-and-secure-key
SETTINGS_ENCRYPTION_KEY=your-base64-encoded-fernet-key-here

# Service Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# API Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com
NEXT_PUBLIC_API_TOKEN=your-production-api-token
NEXT_PUBLIC_WS_URL=wss://yourdomain.com

# CORS Origins (Comma-separated list)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Performance Tuning
GUNICORN_WORKERS=4
LOG_LEVEL=info

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# SSL/TLS (When using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Email Configuration (For alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=DexAgent Alerts <alerts@yourdomain.com>

# Slack Integration (For alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK