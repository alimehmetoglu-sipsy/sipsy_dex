# ====================================
# DexAgents Production Environment Variables
# ====================================
# Copy this file to .env and update values for production deployment

# ----------------
# VERSION INFO
# ----------------
APP_VERSION=3.3.0
ENVIRONMENT=production

# ----------------
# DATABASE CONFIG
# ----------------
POSTGRES_DB=dexagents
POSTGRES_USER=dexagents_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_FOR_PRODUCTION
POSTGRES_PORT=5432
DATABASE_URL=postgresql://dexagents_prod:CHANGE_THIS_STRONG_PASSWORD_FOR_PRODUCTION@postgres:5432/dexagents
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ----------------
# REDIS CONFIG
# ----------------
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ----------------
# SECURITY
# ----------------
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_FOR_PRODUCTION
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
SETTINGS_ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_32_BYTES

# ----------------
# CORS SETTINGS
# ----------------
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ----------------
# API CONFIGURATION
# ----------------
BACKEND_PORT=8080
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Production API URLs - Update with your domain
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/ws
NEXT_PUBLIC_API_TOKEN=

# ----------------
# AI CONFIGURATION
# ----------------
OPENAI_API_KEY=
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# ----------------
# GITHUB INTEGRATION (Optional)
# ----------------
GITHUB_TOKEN=

# ----------------
# MONITORING & LOGGING
# ----------------
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Analytics (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
ANALYTICS_ID=

# ----------------
# PERFORMANCE
# ----------------
GUNICORN_WORKERS=4
NODE_OPTIONS=--max-old-space-size=2048

# ----------------
# FEATURE FLAGS
# ----------------
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
ENABLE_MOCK_AGENTS=false
ENABLE_TEST_MODE=false

# ----------------
# SSL CONFIGURATION
# ----------------
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_DHPARAM_PATH=/etc/nginx/ssl/dhparam.pem

# ----------------
# BACKUP CONFIGURATION
# ----------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ----------------
# EMAIL NOTIFICATIONS (Optional)
# ----------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_TLS=true

# ----------------
# DEPLOYMENT NOTES
# ----------------
# 1. Generate strong passwords:
#    openssl rand -base64 32
#
# 2. Generate JWT secret:
#    openssl rand -hex 64
#
# 3. SSL Certificate:
#    - Use Let's Encrypt for free SSL: certbot certonly --standalone -d yourdomain.com
#    - Or use your own SSL certificates
#
# 4. Required environment variables that MUST be changed:
#    - POSTGRES_PASSWORD
#    - SECRET_KEY
#    - JWT_SECRET_KEY
#    - SETTINGS_ENCRYPTION_KEY
#    - BACKEND_CORS_ORIGINS
#    - NEXT_PUBLIC_API_URL
#    - NEXT_PUBLIC_WS_URL
#
# 5. Optional but recommended:
#    - REDIS_PASSWORD
#    - OPENAI_API_KEY (for AI features)
#    - SMTP_* (for email notifications)
#    - ANALYTICS_ID (for analytics)